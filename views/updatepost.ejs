<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  <body>
    <section id="Home">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h1 class="text-center mt-5">Add Post</h1>
                    <form class="mt-3" action="/poste" method="POST" enctype="multipart/form-data">
                      <div class="mb-3">
                        <input  class="form-control" id="id" name="id" value="<%= post.id %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" value="<%= post.title %>" placeholder="Enter the title" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Publication Date</label>
                            <input type="date" class="form-control" id="date_publication" value="<%= post.date_publication %>" name="date_publication" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Choose Category</label>
                            <select id="categories" name="categories" value="categories" class="form-select" multiple>
                                <!-- Populate options from categories in the database -->
                                <% if (categories && categories.length) { %>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category.id %>"><%= category.name %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Image</label>
                            <input type="file" id="image" name="image" value="<%= post.image %>" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Content</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" name="contenu" value="<%= post.contenu %>" placeholder="Enter the content" rows="3"></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
